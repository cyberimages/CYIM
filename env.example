# General Settings
APP_NAME=CyberGenerateOS
APP_ENV=development  # Options: development, production
APP_DEBUG=True  # Set to False in production
APP_PORT=8000  # Port for the FastAPI server

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cybergenerateos
DB_USER=your_username
DB_PASSWORD=your_password

# Secret Keys
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256

# File Paths
OUTPUT_DIR=./output  # Directory for saving generated outputs
LOG_DIR=./logs  # Directory for application logs

# AI Model Configuration
MODEL_DIR=./models  # Directory containing model files
ART_MODEL_PATH=./models/art_model.pth
MUSIC_MODEL_PATH=./models/music_model.pth

# API Configuration
API_RATE_LIMIT=100  # Maximum requests per minute
API_ALLOWED_ORIGINS=*  # CORS settings (comma-separated, e.g., http://localhost,http://example.com)

# Email Settings (Optional)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=cybergenerateos@example.com

# Redis Configuration (Optional, for caching and task queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS S3 Configuration (Optional, for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=your_region
